#ifndef RR_STATE_JOY_HPP
#define RR_STATE_JOY_HPP

#include <memory>
#include "rclcpp/rclcpp.hpp"
#include "rclcpp_lifecycle/lifecycle_node.hpp"
#include "rr_state_mgm_srv/rr_state_frame.hpp"
#include "rr_state_mgm_srv/visibility_control.h"
#include "rr_common_base/rr_constants.hpp"
#include "sensor_msgs/msg/joy.hpp"
#include <rclcpp_components/register_node_macro.hpp>

namespace rrobot
{
    namespace state_frame
    {

        using CallbackReturn = rclcpp_lifecycle::node_interfaces::LifecycleNodeInterface::CallbackReturn;

        /**
         * @class RRStateJoyNode
         * @brief provides interface for joystick sensor node to input current event frame into state frame.
         */
        class RRStateJoyNode : public rclcpp_lifecycle::LifecycleNode
        {
          public:
            explicit RRStateJoyNode(const rclcpp::NodeOptions &options = rclcpp::NodeOptions()) : rclcpp_lifecycle::LifecycleNode("rr_state_joy_node", options) {}

            ~RRStateJoyNode() = default;

            /**
             * @fn on_configure
             * @brief performs configuration.
             * 
             * Creates subscriber callback
             */
            CallbackReturn on_configure(const rclcpp_lifecycle::State &state) override;

            /**
             * @fn on_activate
             * @brief activates subscription
             */
            CallbackReturn on_activate(const rclcpp_lifecycle::State &state) override;

            /**
             * @fn on_deactivate
             * @brief stops subsciber
             */
            CallbackReturn on_deactivate(const rclcpp_lifecycle::State &state) override;

            /**
             * @fn on_cleanup
             * @brief  resets callback, and subscription
             */
            CallbackReturn on_cleanup(const rclcpp_lifecycle::State &state) override;

            /**
             * @fn update_state
             * @brief update joystick in state frame
             * 
             */
            void update_state(const sensor_msgs::msg::Joy::UniquePtr msg);

          private:
            rclcpp::Subscription<sensor_msgs::msg::Joy>::SharedPtr subscription_;
            RrStateFrameSingleton &state_frame_ = RrStateFrameSingleton::get_instance();
        };
    } // namespace state_frame
} // namespace rrobot

#endif // RR_STATE_JOY_HPP